<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.memory.ViewMemoryFragment">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/fragmentViewMemoryToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/toolbar_bottom"
            android:elevation="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memories"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <ImageView
                android:id="@+id/fragmentViewDeleteMemory"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fragmentViewMemoryImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/fragmentViewMemoryToolbarLayout"
            />


        <TextView
            android:id="@+id/fragmentViewMemoryTextViewTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentViewMemoryImageView"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Memory Text" />


        <TextView
            android:id="@+id/fragmentViewMemoryTextViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentViewMemoryTextViewTimeStamp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Memory Text"
            android:textColor="@color/black" />


        <ProgressBar
            android:id="@+id/fragmentViewMemoryProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragmentViewMemoryTextViewDescription"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />

    </RelativeLayout>


</ScrollView>